{
  "name": "icepeek",
  "version": "1.0.0",
  "description": "",
  "main": "server/server.js",
  "engines": {
    "node": "6.11.1"
  },
  "scripts": {
    "postinstall": "(mkdir -p client/ && cd cordovaWrap/ && ../node_modules/cordova/bin/cordova platform add android)",
    "startServer": "node server/server.js",
    "start": "gulp && npm run cordovaRun",
    "cordovaBuild": "(cd cordovaWrap/ && ../node_modules/cordova/bin/cordova build android)",
    "cordovaRun": "(cd cordovaWrap/ && ../node_modules/cordova/bin/cordova run android)",
    "build": "gulp && npm run cordovaBuild",
    "test": "mocha tests/*/*.js",
    "clientTest": "mocha tests/client/*.js",
    "serverTest": "mocha tests/server/*.js",
    "deployServer": "npm run serverTest && git push heroku master",
    "dev": "gulp && heroku local& gulp watch"
  },
  "author": "Bastien Girschig <bastien.girschig@gmail.com> (http://www.bastiengirschig.fr)",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.4",
    "express": "^4.15.3"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "cordova": "^7.0.1",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-mocha": "^4.3.1",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-tap": "^1.0.1",
    "gulp-uglify": "^3.0.0",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^4.3.11",
    "minimatch": "^3.0.4",
    "mocha": "^3.4.2",
    "node-fetch": "^1.7.1",
    "node-notifier": "^5.1.2",
    "uniq": "^1.0.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  }
}
